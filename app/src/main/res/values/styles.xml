<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#69D4DC</item> <!-- Green color -->
        <item name="colorPrimaryDark">#96E7E0</item> <!-- Dark green -->
        <item name="colorAccent">#69D4DC</item> <!-- Green color for accent -->
    </style>

    <!-- Custom theme for DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/CustomCalendarStyle</item>
    </style>

    <!-- Customize the colors of the calendar (for Material Date Picker) -->
    <style name="CustomCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">#69D4DC</item> <!-- Green primary color -->
        <item name="colorAccent">#96E7E0</item> <!-- Green accent color -->
    </style>
</resources>
