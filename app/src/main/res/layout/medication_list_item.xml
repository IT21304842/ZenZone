<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MedCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:backgroundTint="@color/main"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp">

    <!-- Vertical layout for ImageView and TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/timeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/medtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/karla"
            android:text="Time"
            android:textAlignment="center"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/medLableCardView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/comment_card_background"
            android:backgroundTint="@color/base"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/medication"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/karla_extrabold"
                    android:text="Medication"
                    android:textAlignment="center"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/karla"
                    android:text="Dose"
                    android:textAlignment="center"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/removeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/Tint"
                android:contentDescription="Remove"
                android:src="@drawable/baseline_remove_24" />

            <ImageButton
                android:id="@+id/EditButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/Tint"
                android:contentDescription="Edit"
                android:src="@drawable/baseline_edit_24" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
